@page
@model TPOT_Links.Pages.Sandbox.IndexModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html data-theme="light" lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <link
        href="https://cdn.jsdelivr.net/npm/daisyui@2.50.0/dist/full.css"
        rel="stylesheet"
        type="text/css"/>
    <link
        href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2/dist/tailwind.min.css"
        rel="stylesheet"
        type="text/css"/>

    <script src="https://unpkg.com/htmx.org@1.8.5"></script>
    <script src="https://unpkg.com/htmx.org/dist/ext/include-vals.js"></script>
    <script src="//unpkg.com/alpinejs" defer></script>
    <title>What's Taters, Precious?</title>
</head>
<body class="border-0 border-green-400">
<div x-data="setup()" class="flex flex-row">

    <section class="h-screen w-4/6 flex overflow-x-clip">

        @* <pre x-text="routes"></pre> *@
        <table class="table table-zebra border-0 border-red-700 ">
            <thead>
            <tr>

                <th scope="row" class="col-span-4 border-2">
                    <markdown
                        data-tippy-content="I'm a tooltip! :D">
                        # Hello there!, you can choose search options below
                    </markdown>
                    <div class="join">
                        <div>
                            <div hx-ext="include-vals">
                                @* <pre x-text="current_partial"></pre> *@

                                <input class="input input-bordered join-item"
                                       hx-get
                                       include-vals="partial_name: '_PaperList'"
                                       hx-page="Index"
                                       hx-page-handler="SearchByRegex"
                                       hx-target="#search_results"
                                       hx-swap="innerHTML"
                                       hx-trigger="keyup changed delay:250ms"
                                       hx-indicator="#loading"
                                       class="input input-bordered input-ghost"
                                       aria-label="SEARCH"
                                       :placeholder="search_placeholder"
                                       aria-describedby="search-addon"/>
                            </div>
                        </div>
                        <select class="select select-bordered join-item">
                            <option disabled selected>Category</option>
                            <template x-cloak x-for="cat in categories">
                                <option x-text="cat" :value="cat"></option>
                            </template>
                        </select>
                        <div class="indicator">
                            <span class="indicator-item badge badge-secondary">new</span>
                            <button class="btn join-item">Search</button>
                        </div>
                        <div class="join-item">
                            
                        <partial name="_CardOptionsPanel"/>
                        </div>
                    </div>
                    @*
                    <input type="text" name="term" id="query" autocomplete="off"
                           hx-get
                           hx-page="Index"
                           hx-page-handler="SearchByRegex"
                           hx-target="#search_results"
                           hx-swap="innerHTML"
                           hx-trigger="keyup changed delay:250ms"
                           hx-indicator="#loading"
                           class="input input-bordered input-ghost"
                           aria-label="SEARCH"
                           :placeholder="search_placeholder"
                           aria-describedby="search-addon"/>
                    <div class="htmx-indicator" id='loading'>loading...</div>
                    *@
                    @* <div class="border-2 border-cyan-500"> *@
                    @*     <partial name="_CardOptionsPanel"/> *@
                    @* </div> *@
                    <div class="htmx-indicator" id='loading'>loading...</div>
                </th>

                @* <th x-show="false" *@
                @*     class=""> *@
                @*     <partial name="_CardOptionsPanel"/> *@
                @* </th> *@
            </tr>
            <tr>
                @* <th>Id</th> *@
                <th>Title</th>
                <th>Link</th>
                <th>Excerpt</th>
                @* <th>Content</th> *@
                @* <th>Status</th> *@
                @* <th>Author</th> *@
                @* <th>Categories</th> *@
            </tr>
            </thead>
            <tbody id='search_results'>
            </tbody>

        </table>
    </section>


    <section class="w-2/6 flex hero min-h-screen bg-base-200">

        <div x-if="false">
            <div class="hero-content flex-col lg:flex-row-reverse">
                <template>
                    <partial name="_CardOptionsPanel"/>
                </template>
            </div>
        </div>
    </section>

</div>
</body>
<script>
    function setup() {
      return {
        search_placeholder: "E.g.: 'What is Faith?'",
        render_partial: '_PaperList',
        get current_partial() {
            return this.render_partial
            },
        card_options: {
            case_insensitive: true,
            ignore_whitespace: false,
            ignore_special_characters: false
        },
        categories: [
            'Faith',
            'Obedience',
            'Israel',
        ],
        apply_tippies(){
            console.log('dippy tippy')
            tippy('[data-tippy-content]'); 
            tippy(document.querySelectorAll('.button'));
            tippy(document.querySelectorAll('.btn'));
        }
      }; 
    }
  </script>

</html>